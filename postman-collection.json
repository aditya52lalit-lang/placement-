              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quizId\": \"quiz-id-here\",\n  \"answers\": [\n    {\"selectedAnswer\": 0},\n    {\"selectedAnswer\": 2},\n    {\"selectedAnswer\": 1},\n    {\"selectedAnswer\": 3},\n    {\"selectedAnswer\": 0}\n  ],\n  \"timeTaken\": 300\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/quiz/submit",
              "host": ["{{baseUrl}}"],
              "path": ["quiz", "submit"]
            }
          }
        },
        {
