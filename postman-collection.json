            "url": {
              "raw": "{{baseUrl}}/user/domains",
              "host": ["{{baseUrl}}"],
              "path": ["user", "domains"]
            }
          }
        }
      ]
    },
    {
      "name": "Learning Progress",
      "item": [
        {
          "name": "Get All Progress",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/progress",
              "host": ["{{baseUrl}}"],
              "path": ["progress"]
            }
          }
        },
        {
          "name": "Get Progress by Domain",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/progress/AI",
              "host": ["{{baseUrl}}"],
              "path": ["progress", "AI"]
            }
          }
        },
        {
          "name": "Update Progress",
          "request": {
