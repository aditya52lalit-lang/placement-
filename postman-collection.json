              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"domain\": \"AI\",\n  \"topic\": \"Python Basics\",\n  \"progress\": 75,\n  \"completed\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/progress",
              "host": ["{{baseUrl}}"],
              "path": ["progress"]
            }
          }
        }
      ]
    },
    {
      "name": "Quiz",
      "item": [
        {
          "name": "Get Quiz",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
