        },
        {
          "name": "Get Result by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/quiz/results/result-id-here",
              "host": ["{{baseUrl}}"],
              "path": ["quiz", "results", "result-id-here"]
            }
          }
        }
      ]
    }
  ]
}
